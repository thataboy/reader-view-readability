{
  "manifest_version": 3,
  "name": "Readability",
  "version": "1.3.0",
  "description": "Clean reader view using Mozilla Readability only.",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_title": "Toggle Reader View",
    "default_icon": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
  },
  "background": { "service_worker": "background.js" },
  "commands": {
    "toggle-reader": {
      "suggested_key": { "default": "Alt+R", "mac": "Alt+R" },
      "description": "Toggle Reader View"
    }
  },
  "web_accessible_resources": [{
    "resources": ["readability.js"],
    "matches": ["<all_urls>"]
  }]
}