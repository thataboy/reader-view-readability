{
  "manifest_version": 3,
  "name": "Readability",
  "version": "1.3.0",
  "description": "Clean reader view using Mozilla Readability only.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_title": "Toggle Reader View",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-reader": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "Toggle Reader View"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "readability.js",
        "icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "http://127.0.0.1:9090/*"
  ]
}